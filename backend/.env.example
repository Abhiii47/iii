# Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains sensitive keys

# Server Configuration
PORT=5000

# MongoDB Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority
# Or for local: mongodb://localhost:27017/database_name
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/room_food_finder?retryWrites=true&w=majority

# JWT Secret for token encryption
# Use a long, random string in production
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# Base URL for the backend (for image URLs)
BASE_URL=http://localhost:5000

# Upload Directory (relative to backend root)
UPLOAD_DIR=./uploads
