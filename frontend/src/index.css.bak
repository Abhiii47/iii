@tailwind base;
@tailwind components;
@tailwind utilities;

/* Now using @apply for reusable classes (Tailwind must generate these) */
:root { --primary: #0f172a; --muted: #6b7280; }

html, body, #root { height: 100%; margin:0; }

body {
  @apply bg-slate-50 text-slate-900 antialiased;
  font-family: Inter, system-ui, -apple-system, 'Segoe UI', Roboto, Arial;
}

.container { @apply max-w-6xl mx-auto px-4 py-6; }
.card { @apply bg-white rounded-2xl p-6 shadow-lg; }
.btn { @apply inline-flex items-center px-4 py-2 rounded-md font-medium; }
.btn-primary { @apply bg-slate-900 text-white; }
.small { @apply text-sm text-gray-500; }
.listing-img { @apply w-full h-40 object-cover rounded-lg; }
.grid-3 { @apply grid lg:grid-cols-[2fr_1fr] gap-6; }
